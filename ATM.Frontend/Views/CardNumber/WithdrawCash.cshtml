<div ng-controller="CashWithdrawalController" style="text-align: center">
    <div ng-show="report == null">
        Enter an amount:
        <form name="authenticationForm" novalidate>
            <div ng-show="authenticationForm.$submitted" style="text-align:center;color:red">
                <span ng-show="authenticationForm.input.$error.required || authenticationForm.input.$error.minlength || authenticationForm.input.$error.min">Limit 50000</span>
            </div>
            <div class="input-wrapper" style="text-align:center">
                <input type="number" ng-model="input" name="input" style="width: 192px" ng-minlength="1" ng-maxlength="50000" required="" min="1" value="">
            </div>
            <div class="numpad_wrapper" style="width: 120px; height: 180px; margin:10px auto">
                <numpad></numpad>
            </div>
            <div style="text-align:center">
                <input type="submit" ng-click="withdrawCash()" value="ok" style="padding: 10px">
            </div>
        </form>
    </div>
    <div ng-show="report != null">
        <span>Card number: {{report.CardNumber}}</span><br />
        <span>Transation date: {{report.TransactionTime}}</span><br />
        <span>Amount: {{report.Amount}}</span><br />
        <span>Balance: {{report.Balance}}</span><br />
    </div>
</div>
<session-controls back="navigation" exit="true"></session-controls>